<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/BPhome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam@123"
        android:id="@+id/BPprofile"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PARATHA"
        android:textSize="35sp"
        android:id="@+id/BPparatha"
        android:layout_below="@+id/BPhome"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:id="@+id/Pkerala"
        android:src="@drawable/kerala"
        android:layout_alignTop="@+id/Ponoion"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/Ponoion"
        android:src="@drawable/onion"
        android:layout_below="@+id/BPparatha"
        android:layout_alignParentEnd="true" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Onion Paratha"
        android:id="@+id/Ponion"
        android:layout_below="@+id/Ponoion"
        android:layout_alignStart="@+id/Ponoion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kerala Paratha"
        android:id="@+id/Ptkp"
        android:layout_alignTop="@+id/Ponion"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rs. 8/piece"
        android:id="@+id/Pkp"
        android:layout_below="@+id/Ptkp"
        android:layout_toStartOf="@+id/BPparatha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rs. 20/piece"
        android:id="@+id/Ppp"
        android:layout_below="@+id/Ponion"
        android:layout_alignStart="@+id/Ponion" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select"
        android:id="@+id/Pkeralaparathaselect"
        android:layout_below="@+id/Pkp"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pkeralaparathaqnty"
        android:hint="Qnty"
        android:layout_alignBottom="@+id/Pkeralaparathaselect"
        android:layout_toEndOf="@+id/Pkp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/Ponionparathaselect"
        android:checked="false"
        android:layout_below="@+id/Ppp"
        android:layout_alignStart="@+id/Ppp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Ponionparathaqnty"
        android:hint="Qnty"
        android:layout_alignBottom="@+id/Ponionparathaselect"
        android:layout_alignEnd="@+id/Ponion" />


</RelativeLayout>
