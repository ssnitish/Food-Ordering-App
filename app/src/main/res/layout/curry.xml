<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/BChome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam@123"
        android:id="@+id/BCprofile"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="VEG-CURRY"
        android:textSize="35sp"
        android:id="@+id/BCURRY"
        android:layout_below="@+id/BChome"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:id="@+id/Crajma"
        android:src="@drawable/rajma"
        android:layout_below="@+id/BCURRY"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rajma Curry"
        android:id="@+id/Ctrajma"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rs. 40/plate"
        android:id="@+id/Crajmaprice"
        android:layout_below="@+id/Ctrajma"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/CPANEER"
        android:src="@drawable/paneer_masala"
        android:layout_alignTop="@+id/Crajma"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paneer Masala"
        android:id="@+id/Ctpm"
        android:layout_alignTop="@+id/Ctrajma"
        android:layout_alignStart="@+id/CPANEER" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/Rrajmacurry"
        android:checked="false"
        android:layout_below="@+id/Crajmaprice"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rs. 40/plate"
        android:id="@+id/Cppm"
        android:layout_below="@+id/Ctpm"
        android:layout_alignStart="@+id/Ctpm" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/Rpaneermasala"
        android:layout_below="@+id/Cppm"
        android:layout_alignStart="@+id/Cppm"
        android:checked="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Crajmacurryqunty"
        android:hint="Quantity"
        android:layout_alignBottom="@+id/Rrajmacurry"
        android:layout_toEndOf="@+id/BChome" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cpaneermasalaqnty"
        android:hint="Quantity"
        android:layout_alignBottom="@+id/Rrajmacurry"
        android:layout_alignEnd="@+id/CPANEER" />


</RelativeLayout>
